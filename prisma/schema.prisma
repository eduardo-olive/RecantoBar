generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        String    @id @default(cuid())
  nome      String    @unique
  produtos  Produto[]
}

model Produto {
  id            String   @id @default(cuid())
  nome          String
  precoVenda    Float
  precoCusto    Float
  estoque       Int
  estoqueMinimo Int
  estoqueSeguro Int
  categoriaId   String
  categoria     Categoria @relation(fields: [categoriaId], references: [id])
  perdas        Perda[]
  createdAt     DateTime @default(now())
}

model Movimentacao {
  id        String   @id @default(cuid())
  data      DateTime @default(now())
  desc      String
  pagamento String?  // O "?" indica que é opcional, como no seu interface
  tipo      String   // Armazenará 'ENTRADA' ou 'SAIDA'
  valor     Float
}

model Perda {
  id        String   @id @default(cuid())
  data      DateTime @default(now())
  produtoId String
  produto   Produto  @relation(fields: [produtoId], references: [id])
  qtd       Int
  motivo    String
}